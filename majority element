class Solution {
public:
    int majorityElement(vector<int>& nums) {
        int Majority = nums[0];
        int count = 0;

        for (int num : nums) {
            if (count == 0) {
                Majority = num;
            }
            count += (num == Majority) ? 1 : -1;
        }

        return Majority;
    }
};
